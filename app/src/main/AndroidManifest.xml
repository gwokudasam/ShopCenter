        <activity
            android:name=".app.presentacion.activitys.DetalleComercioActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".app.presentacion.activitys.IntroActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".app.presentacion.activitys.GralMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="b0c2adb10a40dc429ae20d46c2a896bf5743c42d" />
