<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Verde</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="ActionBarTabStyle.Verde" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_verde</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:src">@android:drawable/ic_menu_add</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/color_menu_negro_bg</item>
        <item name="floatingSearch_viewTextColor">@color/color_gris_bg</item>
        <item name="floatingSearch_hintTextColor">@color/color_contact_form_border</item>
        <item name="floatingSearch_dividerColor">@color/primary</item>
        <item name="floatingSearch_clearBtnColor">@android:color/white</item>
        <item name="floatingSearch_leftActionColor">@android:color/white</item>
        <item name="floatingSearch_menuItemIconColor">@android:color/white</item>
        <item name="floatingSearch_suggestionRightIconColor">@android:color/white</item>
        <item name="floatingSearch_actionMenuOverflowColor">@android:color/white</item>
    </style>

</resources>
