<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_gris_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2"
            android:layout_above="@+id/relative_bottom">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="0dp"
                    android:clickable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="320dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="210dp">

                            <com.exequiel.shopcenter.framework.ui.view.ProportionalImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/wizard_fragment_image_view"
                                android:scaleType="centerCrop"
                                android:src="@drawable/intro_screen1" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            android:paddingTop="5dp"
                            android:paddingRight="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/fragment_wizard_title"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="Nombre del cupon"
                                android:textSize="18dp"
                                android:maxLines="2"
                                android:textColor="@color/button_background_login"
                                android:ellipsize="end" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_above="@+id/textView29"
                                android:id="@+id/linearLayout11"
                                android:background="@drawable/layer_item_my_account"
                                android:paddingLeft="5dp"
                                android:paddingBottom="5dp" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="La cocina"
                                    android:id="@+id/textView37"
                                    android:textColor="@color/color_menu_negro_claro_img" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="Campaña comercial"
                                    android:textSize="10sp"
                                    android:textColor="#f37a00" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="3 disponibles"
                                android:id="@+id/textView29"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:textColor="@color/primary"
                                android:paddingTop="5dp"
                                android:gravity="center"
                                android:paddingBottom="5dp" />
                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    card_view:cardElevation="0dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Remeras gratis"
                            android:textColor="@color/button_background_login"

                            android:id="@+id/textView35"
                            android:layout_marginTop="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/button_background_login"
                            android:text="RTICULO NUEVO EN CAJA DE CARTON CON VENTANA EXHIBIDORA DE LA FAMOSA FIRMA HIGHWAY61 QUE FABRICA SOLO MINIATURAS DE COCHES AMERICANOS CON MUY ALTA CALIDAD Y DETALLE ABRE PUERTAS, CAPOT Y PORTON TRASE"
                            android:id="@+id/textView36"
                            android:maxLines="5"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="0dp"
                    android:clickable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Términos y condiciones del cupón"
                            android:textColor="@color/button_background_login"
                            android:id="@+id/textView30"
                            android:layout_marginBottom="5dp"
                            android:layout_gravity="center_horizontal" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/button_background_login"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Válido hasta:"
                                android:id="@+id/textView31" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/button_background_login"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="22/05/2015"
                                android:id="@+id/textView32"
                                android:layout_marginLeft="10dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/clear_btn_color"
                            android:text="ClubCupon | ClubCupon.com.ar - Descuentos hasta 60 ... www.clubcupon.com.ar/ Club Cupón - Prosciutto Caballito : Entrada + plato principal + bebida + postre + brindis para 2 personas. - Cupones de descuento hasta 60% en todas las ... ‎Viajes y Escapadas - ‎La Plata - ‎Ingresá - ‎Promociones Cupones nuevos · ImprimiTuCupon! Cupones de descuento ... www.imprimitucupon.com/ Encontrá cupones de descuento en un solo lugar. Cupones de descuentos, ofertas y promociones en tu ciudad de hasta el 90%. &quot;Just&quot; from &quot;The Bends&quot; 00:00 &quot;Paranoid android&quot; from &quot;OK Computer&quot; 03:53 &quot;Karma police&quot; from &quot;OK Computer&quot; 10:21 &quot;Creep&quot; from &quot; Pablo Honey&quot; 14:46 &quot;No surprises&quot; from &quot;OK Computer&quot; 19:24 &quot;High and Dry&quot; from &quot;The Bends&quot; 23:13 &quot;My iron lung&quot; from &quot;The Bends&quot; 27:31 &quot;There There&quot; from &quot;Hail to the Thief&quot; 32:07 &quot;Lucky&quot; from &quot;OK Computer&quot; 37:31 &quot;Fake Plastic Trees&quot; from &quot;The Bends&quot; 41:48 &quot;Idioteque&quot; from &quot;Kid A&quot; 46:37 &quot;2 + 2 = 5&quot; from &quot; Hail to the Thief&quot; 51:15 &quot;The Bends&quot; from &quot;The Bends&quot; 54:46 "
                            android:id="@+id/textView34"
                            android:layout_marginTop="5dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/relative_bottom"
            android:layout_alignParentBottom="true"
            android:background="@color/primary"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Faltan 1 día, 23:21:34 Hrs"
                android:textColor="@android:color/white"
                android:id="@+id/textView38"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOMAR"
                android:layout_margin="5dp"
                android:id="@+id/button3"
                android:textColor="@android:color/white"
                android:background="@drawable/select_btn_azul_oscuro"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>