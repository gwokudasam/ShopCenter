<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@android:color/white">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/activity_gral_menu_home"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="como llegar"
            android:drawableTop="@drawable/ic_account"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_gral_menu_my_account"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="compartir"
            android:drawableTop="@drawable/ic_account"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:layout_weight="0.98"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/activity_gral_menu_scanner"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="contactar"
            android:drawableTop="@drawable/ic_account"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/activity_gral_menu_shop"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="social"
            android:drawableTop="@drawable/ic_account"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/activity_gral_menu_more"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="seguir"
            android:drawableTop="@drawable/ic_account"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:textSize="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Dirección:"
                android:padding="5dp"
                android:id="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Bº Santa Cecilia 523"
                android:padding="5dp"
                android:id="@+id/textView11" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Teléfonos:"
                android:padding="5dp"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="351-12345678"
                android:padding="5dp"
                android:id="@+id/textView22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Web:"
                android:padding="5dp"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="wwww.prueba.com"
                android:padding="5dp"
                android:id="@+id/textView33" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Email:"
                android:padding="5dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="email@gmail.com"
                android:padding="5dp"
                android:id="@+id/textView44" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

</android.support.v7.widget.CardView>
