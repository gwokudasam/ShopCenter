<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardElevation="1dp"
    android:layout_margin="5dp"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="210dp"
        android:layout_height="170dp"
        android:padding="5dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <com.exequiel.shopcenter.framework.ui.view.ProportionalImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/wizard_fragment_image_view"
                android:src="@drawable/intro_screen1"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#a9000000"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sorteamos una remera !!!"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView27"
                    android:textSize="15sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/fragment_wizard_title"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:text="Sorteo activo!"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
